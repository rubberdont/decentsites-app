# ===========================================
# Booking Application - Docker Environment
# ===========================================

# MongoDB Configuration
MONGODB_URI=mongodb://host.docker.internal:27017
MONGODB_DATABASE=booking_app

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=https://booking.decentsites.cloud,https://booking-admin.decentsites.cloud

# Owner Configuration
DEFAULT_OWNER_ID=your-owner-id-here

# Superadmin Configuration
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=SuperAdmin@123

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@bookingapp.com

# Frontend API URL
NEXT_PUBLIC_API_URL=https://booking-api.decentsites.cloud

# Internal API URL (for server-side calls within Docker network)
INTERNAL_API_URL=http://booking-api:1301

# Admin App Name
NEXT_PUBLIC_APP_NAME=Booking Admin
